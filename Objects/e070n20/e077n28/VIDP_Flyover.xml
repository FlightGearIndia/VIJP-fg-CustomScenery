<PropertyList>
	<path>VIDP_Flyover.ac</path>
<animation>
		<type>material</type>
		<object-name>halo</object-name>
		<condition>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.57</value>
			</greater-than>
		</condition>
		<global type="bool">true</global>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
		<texture>Halos.rgb</texture>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>halo</object-name>
		<condition>
			<less-than-equals>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.57</value>
			</less-than-equals>
		</condition>
		<global type="bool">true</global>
		<emission>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</emission>
		<texture>trans.rgb</texture>
	</animation>

	
</PropertyList>